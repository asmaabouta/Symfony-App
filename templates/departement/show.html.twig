{% extends 'base.html.twig' %}

{% block title %}Departement{% endblock %}

{% block body %}
    <h1 style="color:Darkred;font-family: Algerian;text-align: center">Affichage D'un Departement</h1>

    <table class="table" border="1">
        <tbody>
            <tr class="table-primary">
                <th>Id</th>
                <td>{{ departement.id }}</td>
            </tr>
            <tr>
                <th>Nom_Departement</th>
                <td>{{ departement.NomDepartement }}</td>
            </tr>
        </tbody>
    </table>
    <form action="{{ path('departement_index', {'id': departement.id}) }}">
        <input type="submit" class="btn btn-primary" value="Revenir A La Liste " style="width:20%;color:#dadedf;background-color:darkred;font-size: large" />
    </form>
    <br>
    <form action="{{ path('departement_edit', {'id': departement.id}) }}">
        <input type="submit" class="btn btn-primary" value="Modifier" style="width:20%;color:#dadedf;background-color:#1e2b37;font-size: large" />
    </form>

    {{ include('departement/_delete_form.html.twig') }}
{% endblock %}

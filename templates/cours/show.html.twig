{% extends 'base.html.twig' %}

{% block title %}Cours{% endblock %}

{% block body %}
    <h1 style="color:Darkred;font-family: Algerian;text-align: center">Afficher Un Cours</h1>

    <table class="table" border="1">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ cour.id }}</td>
            </tr>
            <tr>
                <th>Intitule</th>
                <td>{{ cour.Intitule }}</td>
            </tr>
        </tbody>
    </table>
    <form action="{{ path('cours_edit', {'id': cour.id}) }}">

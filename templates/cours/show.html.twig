    </form>
    <form action="{{ path('cours_index') }}">
        <input type="submit" class="btn btn-primary" value="Revenir A La Liste" style="width:30%;background-color:darkred;font-size: large"/>
    </form>



    {{ include('cours/_delete_form.html.twig') }}
{% endblock %}
